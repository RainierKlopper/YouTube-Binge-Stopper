{
  "manifest_version": 3,
  "name": "YouTube Binge Stopper",
  "version": "1.0",
  "description": "Asks for confirmation before watching a second YouTube video in a row.",
  "permissions": [
    "webNavigation",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "*://www.youtube.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "css": ["style.css"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ]
}